@page
@model ResendEmailConfirmationModel

@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="w-full mx-auto mt-16 p-6 font-base">

    <h1 class="font-title text-3xl mb-6 text-center">@ViewData["Title"]</h1>

    <form method="post" class="space-y-4">

        <p class="text-center text-sm text-[var(--sl-color-neutral-600)] mb-4">
            Enter your email to receive a new confirmation link.
        </p>

        <!-- Validation Summary -->
        <div asp-validation-summary="All"
             class="text-red-500 text-sm"
             role="alert">
        </div>

        <!-- Email Field -->
        <div>
            <label asp-for="Input.Email"
                   class="block text-sm mb-1 font-medium">
                Email
            </label>

            <sl-input
                asp-for="Input.Email"
                type="email"
                required
                placeholder="name@example.com"
                class="w-full">
            </sl-input>

            <span asp-validation-for="Input.Email"
                  class="text-red-500 text-sm"></span>
        </div>

        <!-- Submit -->
        <sl-button type="submit"
                   variant="primary"
                   class="w-full">
            Resend
        </sl-button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
